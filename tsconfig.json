{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "module": "CommonJS",
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "noImplicitAny": true,
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*.ts", "src/index.tsx", "src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_nodules", "dist"]
}
